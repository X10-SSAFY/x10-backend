<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.xten.model.dao.XtenDao">

	<!-- 전체 운동 조회 -->
	<select id="selectAllExercises" resultType="Exercise">
		SELECT *
		FROM exercise
	</select>
	
	<!-- 전체 운동 조회 -->
	<select id="selectTestResults" resultType="TestResult">
		SELECT *
		FROM test_result
	</select>
	
	<!-- 찜한영상 조회 -->
	<select id="selectFavoriteVideos" resultType="FavoriteVideos">
		SELECT *
		FROM favorite_videos
	</select>
	
	<!-- 찜한운동 조회 -->
	<select id="selectFavoriteExercises" resultType="FavoriteExercises">
		SELECT *
		FROM favorite_exercises
	</select>
	
	<!-- 찜한영상에 추가 -->
	<insert id="insertFavoriteVideos" parameterType="FavoriteVideos">
		INSERT INTO favorite_videos (user_seq, video_url)
		VALUES(#{userSeq}, #{videoUrl})
	</insert>
	
	<!-- 찜한영상에서 삭제 -->
	<delete id="deleteFavoriteVideos" parameterType="int">
		DELETE FROM favorite_videos
		WHERE favorite_videos_seq=#{favoriteVideosSeq}
	</delete>
	
	
	<!-- 찜한운동에 추가 -->
	<insert id="insertFavoriteExercises" parameterType="FavoriteExercises">
		INSERT INTO favorite_exercises (user_seq)
		VALUES(#{userSeq})
	</insert>
	
	<!-- 찜한운동에서 삭제 -->
	<delete id="deleteFavoriteExercises" parameterType="int">
		DELETE FROM favorite_exercises
		WHERE favorite_exercises_seq=#{favoriteExercisesSeq}
	</delete>
	
	<!-- 테스트 결과 저장 -->
	<insert id="insertTestResult" parameterType="TestResult">
		INSERT INTO test_result (user_seq)
		VALUES(#{userSeq})
	</insert>
	
	<!-- 테스트 결과 삭제 -->
	<delete id="deleteTestResult" parameterType="TestResult">
		DELETE FROM test_result
		WHERE user_seq=#{userSeq} AND test_result_seq=#{testResultSeq}
	</delete>
	

</mapper>